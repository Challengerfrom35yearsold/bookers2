<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, id:"inputName", placeholder:"名前", class:"form-control name"%>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, id:"inputImage", placeholder: "プロフィール画像", accept: "image/*",  class:"form-control-file user_image" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"自己紹介文", class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User" ,class:"btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>