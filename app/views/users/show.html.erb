<%= flash[:notice] %>

<%= render 'new_user', user: @user %>
<%= render 'books/new_book', book: @book %>

<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag @user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= link_to "#{book.title}", book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
