<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, id:"inputTitle", class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="inputOpinion">Opinion</label>
        <%= f.text_area :body, id:"inputIntroduction", class:"form-control book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success" %>
        <% end %>
      </div>

      <%= link_to "Show", book_path(@book.id) %>
|
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>