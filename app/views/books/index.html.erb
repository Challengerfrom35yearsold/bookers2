<%#= render 'users/new_user', user: @user %>
<%= render 'books/new_book', book: @book %>

<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td>
          <%= image_tag book.user.get_profile_image(100,100) %>
        </td>
        <td>
          <%= link_to "#{book.title}", book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>